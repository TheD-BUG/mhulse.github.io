<?xml version="1.0" encoding="UTF-8"?>

<rss version="2.0" 
	xmlns:media="http://search.yahoo.com/mrss/" 
	xmlns:atom="http://www.w3.org/2005/Atom"
>
	
	<channel>
		
		<title>{{ site.title | xml_escape }} - Posts</title>
		
		<link>{{ site.url }}</link>
		
		<atom:link href="{{ site.url }}rss.xml" rel="self" type="application/rss+xml" />
		
		{% if site.description %}<description>{{ site.description | xml_escape }}</description>{% endif %}
		
		<language>en-us</language>
		
		{% for page in site.posts %}
			
			{% unless page.external_url %}
				
				<item>
					
					<title>{{ page.title | xml_escape }}{% if page.deck %}{{ page.deck | prepend: " | " | xml_escape }}{% endif %}</title>
					
					{% capture description %}{{ page.output | strip_html | truncatewords: 100 | trim }}{% endcapture %}
					
					<description>{% if description != '' %}{{ description | append: ' ...' | xml_escape }}{% endif %}</description>
					
					<pubDate>{{ page.date | date: "%a, %d %b %Y %H:%M:%S %z" }}</pubDate>
					
					<link>{{ site.url }}{{ page.url | remove_first: "/" | remove: "index.html" }}</link>
					
					<guid isPermaLink="true">{{ site.url }}{{ page.url | remove_first: "/" | remove: "index.html" }}</guid>
					
					<author>{{ site.email }} ({{ site.name | xml_escape }})</author>
					
					{% for category in page.categories %}
						
						<category>{{ category | xml_escape }}</category>
						
					{% endfor %}
					
					{% if page.fig1 %}
						
						<media:content medium="image" type="" url="{% if page.external_image %}{{ page.external_image }}{% else %}{{ site.uploads }}{{ page.fig1.image }}{% endif %}">
							
							{% if page.fig1.caption %}
								
								<media:description type="plain">{{ page.fig1.caption | xml_escape }}</media:description>
								
							{% endif %}
							
						</media:content>
						
					{% endif %}
					
				</item>
				
			{% endunless %}
			
		{% endfor %}
		
	</channel>
	
</rss>
