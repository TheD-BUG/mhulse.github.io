<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
	
	<title>{{ site.title | xml_escape }} - Posts</title>
	
	<link href="{{ site.url }}atom.xml" rel="self" />
	<link href="{{ site.url }}" />
	
	<updated>{{ site.time | date_to_xmlschema }}</updated>
	
	<id>{{ site.url }}</id>
	
	<author>
		<name>{{ site.name | xml_escape }}</name>
		<email>{{ site.email }}</email>
	</author>
	
	{% for page in site.posts %}
		
		{% unless page.external_url %}
			
			<entry>
				
				<title>{{ page.title | xml_escape }}{% if page.deck %}{{ page.deck | prepend: " | " | xml_escape }}{% endif %}</title>
				
				<link href="{{ site.url }}{{ page.url | remove_first: "/" }}" />
				
				<updated>{{ page.date | date_to_xmlschema }}</updated>
				
				<id>{{ site.url }}{{ page.id }}</id>
				
				{% capture content %}{{ page.output | strip_html | truncatewords: 100 | trim }}{% endcapture %}
				
				{% if content != '' %}<content type="html">{{ content | append: ' ...' | xml_escape }}</content>{% endif %}
				
			</entry>
			
		{% endunless %}
		
	{% endfor %}
	
</feed>
